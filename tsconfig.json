{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "outDir": "./lib",
    "declaration": true,
    "inlineSourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./index.ts"
  ],
  "exclude": ["node_modules"]
}